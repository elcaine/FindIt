<div class="row">
  <div class="col-auto">
    <h2 class="display-4">Welcome Back, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-5 m-2">
    <h3 class="display-6">Start A New Search</h3>
    <br>
    <form>

      <div class="input-group mb-3">
        <label class="input-group-text" for="inputGroupSelect01">Services</label>
        <select class="form-select" id="inputGroupSelect01">
          <option selected>Choose...</option>
          <option value="1">Plumbing</option>
          <option value="2">HVAC</option>
          <option value="3">Electrical</option>
          <option value="4">Landscaping</option>
        </select>
      </div>

      <div class="form-group">
        <label for="state">State</label>
        <br>
        <input type="text" class="form-control" id="state" placeholder="Enter state">
      </div>
      <br>

      <div class="form-group">
        <label for="city">City</label>
        <br>
        <input type="text" class="form-control" id="city" placeholder="Enter city">
      </div>
      <br>

      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
  
  <div class="col-md-5">
    <h4 class="display-6">View Your Previous Searches</h4>
    <div id="previous-seraches"></div>
  </div>


