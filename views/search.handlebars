    <div class="container mt-5">
        <h1 class="display-4 text-center">Find Home Services</h1>
        <form>
            <div class="form-row justify-content-center">
                <div class="col-md-6 mb-3">
                    <label for="serviceCategory">Select a Service Category</label>
                    <select class="form-control" id="serviceCategory">
                        <option value="">Choose...</option>
                        <option value="plumbing">Plumbing</option>
                        <option value="electrician">Electrician</option>
                        <option value="landscaping">Landscaping</option>
                    </select>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="location">Enter Your Location</label>
                    <input type="text" class="form-control" id="location" placeholder="City or ZIP Code">
                </div>
            </div>
            <div class="text-center">
                <button class="btn btn-primary btn-lg" type="submit">Search</button>
            </div>
        </form>
    </div>
