<h1 class="display-4 text-center">Create An Account</h1>

<div class="registration-form" id="register">
        <form>
            <div class="form-icon">
                <span><i class="fa-solid fa-circle-user fa-xl"></i></span>
            </div>
            <div class="form-group">
                <input type="text" class="form-control item" id="name2" placeholder="Name">
            </div>
            <div class="form-group">
                <input type="password" class="form-control item" id="password2" placeholder="Password">
            </div>
            <div class="form-group">
                <input type="text" class="form-control item" id="email" placeholder="Email">
            </div>
            <div class="form-group">
                <input type="text" class="form-control item" id="phone-number" placeholder="Phone Number">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-block create-account">Create Account</button>
            </div>
        </form>
    </div>
